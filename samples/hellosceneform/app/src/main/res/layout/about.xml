<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:text="@string/app_name"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/about_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:autoText="true"
                android:text="版    本：V1.0"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/title_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:text="开发商：北京悦成三际科技有限公司               岳"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/about_tel_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="16dp"
                android:text="联系方式"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/qq"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:text="QQ  ：000000000" />

            <TextView
                android:id="@+id/about_tel1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:text="客服邮箱：advise@ldci.com.cn" />

            <TextView
                android:id="@+id/about_tel1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:text="公司网址：www.ldci.com.cn" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>